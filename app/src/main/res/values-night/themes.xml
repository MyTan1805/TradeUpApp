<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- =================================================================================== -->
    <!--  BASE APPLICATION THEME (DARK)                                                      -->
    <!-- =================================================================================== -->
    <style name="Theme.TradeUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 1. BRAND COLORS -->
        <item name="colorPrimary">@color/tradeup_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/tradeup_blue</item>

        <item name="colorSecondary">@color/tradeup_teal</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/tradeup_teal</item>

        <!-- 2. UI & SEMANTIC COLORS (DARK THEME OVERRIDES) -->
        <item name="android:windowBackground">@color/grey_900</item>
        <item name="colorSurface">@color/grey_800</item>
        <item name="colorOnSurface">@color/text_primary_dark_theme</item>
        <item name="colorOutline">@color/grey_800</item>

        <item name="colorError">@color/status_error</item>
        <item name="colorOnError">@color/black</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

        <!-- 3. TYPOGRAPHY (Kế thừa từ file themes.xml gốc) -->
        <item name="textAppearanceHeadline4">@style/TextAppearance.TradeUp.Headline28</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TradeUp.Headline24</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TradeUp.Headline20</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TradeUp.Headline16</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TradeUp.Headline14</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TradeUp.Body16</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TradeUp.Body14</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TradeUp.Body12</item>
        <item name="textAppearanceButton">@style/TextAppearance.TradeUp.Headline14</item>

        <!-- 4. SHAPE (Kế thừa từ file themes.xml gốc) -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TradeUp.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TradeUp.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TradeUp.LargeComponent</item>

        <!-- 5. WIDGET STYLES (Kế thừa từ file themes.xml gốc) -->
        <item name="materialCardViewStyle">@style/Widget.TradeUp.CardView</item>
        <item name="textInputStyle">@style/Widget.TradeUp.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Widget.TradeUp.Button</item>
        <item name="bottomNavigationStyle">@style/Widget.TradeUp.BottomNavigationView</item>
    </style>
</resources>