<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu viền khi chip được chọn (dùng màu Primary) -->
    <item android:state_checked="true" android:color="?attr/colorPrimary" />
    <!-- Màu viền khi không được chọn (dùng màu viền mặc định) -->
    <item android:state_checked="false" android:color="?attr/colorOutline" />
</selector>