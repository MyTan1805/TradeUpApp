<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Typography - mali Font -->
    <style name="TextAppearance.TradeUp.Headline28" parent="TextAppearance.MaterialComponents.Headline4"> <!-- Kế thừa từ Material để có sẵn một số thuộc tính -->
        <item name="fontFamily">@font/mali_bold</item> <!-- Giả sử dùng Bold cho Headline lớn, hoặc Regular/Light tùy ý -->
        <item name="android:fontFamily">@font/mali_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="lineHeight">36sp</item> <!-- Cần API 28+ -->
        <!-- <item name="lineHeight">36sp</item> Dùng cho Material Components -->
        <item name="android:letterSpacing">-0.02</item> <!-- -2% -->
    </style>

    <style name="TextAppearance.TradeUp.Headline24" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/mali_bold</item>
        <item name="android:fontFamily">@font/mali_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.TradeUp.Headline20" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/mali_bold</item> <!-- Hoặc mali_regular nếu Medium weight tương ứng với Regular -->
        <item name="android:fontFamily">@font/mali_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.TradeUp.Headline18" parent="TextAppearance.MaterialComponents.Subtitle1"> <!-- Hoặc tự định nghĩa -->
        <item name="fontFamily">@font/mali_regular</item> <!-- Giả sử Medium weight là Regular -->
        <item name="android:fontFamily">@font/mali_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="lineHeight">26sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="TextAppearance.TradeUp.Headline16" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/mali_semibold</item>
        <item name="android:fontFamily">@font/mali_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.TradeUp.Headline14" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/mali_semibold</item>
        <item name="android:fontFamily">@font/mali_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.TradeUp.Headline12" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/mali_semibold</item>
        <item name="android:fontFamily">@font/mali_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">0</item> <!-- 0% -->
    </style>


    <!-- Body Text -->
    <style name="TextAppearance.TradeUp.Body16" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/mali_regular</item>
        <item name="android:fontFamily">@font/mali_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
        <item name="android:letterSpacing">0.005</item> <!-- 0.5% -->
    </style>

    <style name="TextAppearance.TradeUp.Body14" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/mali_regular</item>
        <item name="android:fontFamily">@font/mali_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:letterSpacing">0.005</item> <!-- 0.5% -->
    </style>

    <style name="TextAppearance.TradeUp.Body12" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/mali_regular</item>
        <item name="android:fontFamily">@font/mali_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:letterSpacing">0.01</item> <!-- 1% -->
    </style>

    <style name="ProfileLinkItem" parent="Widget.AppCompat.TextView"> <!-- Kế thừa từ AppCompat -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.TradeUp.Body16</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingStart">@dimen/profile_link_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/profile_link_horizontal_padding</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ProfileDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

    <style name="ProfileStatItemLayout" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ProfileStatValue" parent="TextAppearance.TradeUp.Headline20">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/app_text_primary</item>
    </style>

    <style name="ProfileStatLabel" parent="TextAppearance.TradeUp.Body12"> <!-- Sử dụng Body12 như bạn đã định nghĩa -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ProfileStatDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">?attr/colorOutline</item> <!-- Hoặc màu divider bạn muốn -->
    </style>

    <style name="Widget.TradeUp.Chip.Status" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TradeUp.Chip.Status.Active">
        <item name="chipBackgroundColor">@color/status_active_background</item>
        <item name="android:textColor">@color/status_active_text</item>
    </style>

    <style name="ShapeAppearance.App.Corner.Top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey_200</item>
        <item name="colorControlActivated">@color/yellow_star</item>
    </style>

    <style name="ShapeAppearance.TradeUp.CornerMedium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>

    <style name="Widget.TradeUp.Chip.Filter" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/grey_100</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?attr/colorOutline</item>
        <item name="chipIconTint">?attr/colorOnSurface</item>
        <item name="closeIconTint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.TradeUp.Chip.Status.Sold" parent="Widget.TradeUp.Chip.Status">
        <item name="chipBackgroundColor">@color/status_sold_background</item>
        <item name="android:textColor">@color/status_sold_text</item>
    </style>

    <style name="Widget.TradeUp.Chip.Status.Paused" parent="Widget.TradeUp.Chip.Status">
        <item name="chipBackgroundColor">@color/status_paused_background</item>
        <item name="android:textColor">@color/status_paused_text</item>
    </style>

    <style name="Widget.TradeUp.Chip.SubCategory" parent="Widget.MaterialComponents.Chip.Filter">
        <!-- Style cho chip không được chọn -->
        <item name="chipBackgroundColor">@color/grey_100</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="ThemeOverlay.TradeUp.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.TradeUp.BottomSheet.Modal</item>
    </style>

    <style name="Widget.TradeUp.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- Bo tròn góc trên của BottomSheet -->
        <item name="shapeAppearance">@style/ShapeAppearance.TradeUp.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.TradeUp.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/corner_radius_large</item>
        <item name="cornerSizeTopRight">@dimen/corner_radius_large</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="Widget.TradeUp.Chip.Status.Pending" parent="Widget.TradeUp.Chip.Status">
        <item name="chipBackgroundColor">@color/status_pending_background</item>
        <item name="android:textColor">@color/status_pending_text</item>
    </style>
    <style name="Widget.TradeUp.Chip.Status.Countered" parent="Widget.TradeUp.Chip.Status">
        <item name="chipBackgroundColor">@color/status_countered_background</item>
        <item name="android:textColor">@color/status_countered_text</item>
    </style>

    <style name="Widget.TradeUp.Chip.Status.Completed" parent="Widget.TradeUp.Chip.Status">
        <item name="chipBackgroundColor">@color/status_completed_background</item>
        <item name="android:textColor">@color/status_completed_text</item>
    </style>
    <style name="Widget.TradeUp.Chip.Status.Rated" parent="Widget.TradeUp.Chip.Status">
        <item name="chipBackgroundColor">@color/status_rated_background</item>
        <item name="android:textColor">@color/status_rated_text</item>
    </style>

    <style name="Widget.TradeUp.RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="Widget.TradeUp.RadioButton" parent="">
        <item name="android:button">@null</item> <!-- Ẩn nút mặc định -->
        <item name="android:drawableStart">?android:attr/listChoiceIndicatorSingle</item> <!-- Dùng drawable của hệ thống -->
        <item name="android:drawablePadding">16dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

    <style name="BottomSheetOption" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="drawableTint">?attr/colorOnSurface</item> <!-- Sửa lỗi app:drawableTint -->
    </style>

    <style name="AddItemLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle1</item>
    </style>

    <!-- Style cho các trường có thể click (Category, Condition,...) -->
    <style name="AddItemField" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_clickable_field</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_forward</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <!-- Style cho các trường không thể chỉnh sửa -->
    <style name="AddItemField.ReadOnly" parent="AddItemField">
        <item name="android:background">@drawable/bg_readonly_field</item>
        <item name="android:drawableEnd">@null</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

    <style name="Theme.TradeUp.ImagePicker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>

        <item name="colorPrimary">?attr/colorSurface</item>
        <item name="colorPrimaryVariant">?attr/colorSurface</item>
        <item name="colorOnPrimary">?attr/colorOnSurface</item>
    </style>

